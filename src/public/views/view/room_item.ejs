
<link rel="stylesheet" href="../../styles/sass/room_detail.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

    <div class="container-fluid mt-5">
        <div class="room__item d-flex justify-content-sm-center gap-5">
            <img src="<%= data.imgLink %>" alt="" class="room__item--img img--details" style="width: 70rem; height: 50rem;">
            
           <div class="">
            <div class=" d-flex gap-3"><p class="room__item--name fs-1">Tên phòng: <p class="room__name fs-1"><%= data.nameRoom %></p></p></div>
            <ul class="room__item--description item--details">
                <% if(data.checkBooking){ %>
                    <li class="item__description d-flex gap-3"><p class="fs-3">Tình trạng phòng: </p> <p class="fs-3 text-warning-emphasis">Đã thuê</p></li>
                    <% }else{ %>
                        <li class="item__description d-flex gap-3"><p class="fs-3">Tình trạng phòng: </p> <p class="fs-3 text-success">Còn trống</p></li>
                        <% } %>
                <li class="item__description d-flex gap-3"><p class="fs-3">Loại phòng: </p><p class="fs-3"><%= data.typeRoom %></p></li>
            </ul>
            <h1 class="room__price">$ <%= data.price %> / ngày</h1>
            <% if(!data.checkBooking){ %>
               <form action="/booking_room/<%= data.id %>">
                <div class="btn__room--item">
                    <button class="btn__item btn--details fs-4 mt-5" type="submit" >Đặt ngay</button>
                </div>
               </form>
                <% } %>  
           </div>
        </div>
        <h1 class="item__description item--details fs-4 m-5 p-5">Mô tả về phòng: <%= data.description %> </h1>
        
    </div>
    